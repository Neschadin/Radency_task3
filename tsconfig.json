{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "*": [
                "src/*"
            ]
        }
    },
    "include": [
        "app.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}